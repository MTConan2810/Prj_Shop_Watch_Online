@model Prj_Shop_Watch_Online.Models.Users
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <ol class="breadcrumb breadcrumb-instro">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-forward" aria-hidden="true"></i>Trang chủ</a></li>
        <li class="breadcrumb-item active">Đăng nhập</li>
    </ol>
</div>
<div class="row clearfix">
    <div style="margin:5px auto; background-color:#4e73df; background-size:cover">
        <h3 style="text-align:center;margin-bottom:25px;">Đăng nhập</h3>
        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @style = "text-align:center" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.TextBoxFor(m => m.Username, "", new { @class = "input", @placeholder = "Tên đăng nhập", @required = "Không được để trống" })
            </div>
            <div class="form-group">
                @Html.PasswordFor(m => m.Password, new { @class = "input", @placeholder = "Mật khẩu", @required = "Không được để trống" })
            </div>
            <div style="text-align:center; clear:both;">
                <div style="margin:20px 0;">
                    <a href="#" style="text-decoration:none">Quên mật khẩu</a>
                </div>
                <button class="readall" type="submit">Đăng nhập</button>
            </div>
        }
        @if (ViewBag.error != null)
        {
            <br />
            <div class="alert alert-danger" role="alert" style="color:red">@ViewBag.error</div>
        }
    </div>
</div>

