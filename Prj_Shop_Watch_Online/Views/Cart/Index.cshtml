@model List<Prj_Shop_Watch_Online.Models.Cart>
@{
    ViewBag.Title = "Giỏ hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <ol class="breadcrumb breadcrumb-instro">
        <li class="breadcrumb-item"><a href="/"><i class="fa fa-forward" aria-hidden="true"></i>Trang chủ</a></li>
        <li class="breadcrumb-item active">Giỏ hàng</li>
    </ol>
</div>
<div class="row">
    @if (Model.Count > 0)
    {
        int stt = 1;
        decimal total = 0;
        <table class="table" style="margin:20px auto;">
            <thead>
                <tr>
                    <td>STT</td>
                    <td>Ảnh</td>
                    <td>Sản phẩm</td>
                    <td>Đơn giá</td>
                    <td>Số lượng</td>
                    <td>Khuyến mãi</td>
                    <td>Thành tiền</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@(stt++)</td>
                        <td>
                            @{
                                string ImagePath = "~/wwwroot/Images/" + item.Products.ProductImage.Select(s=>s.ImagePath);
                            }
                            <img src="@Url.Content(ImagePath)" alt="" width="70" height="100" />
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.Products.TenSp)
                        </td>
                        <td>@Html.DisplayFor(model => item.Products.Gia) VNĐ</td>
                        <td><input type="number" id="quantity" name="quantity" value="@item.quantity" min="1" max="100"/></td>
                        <td>khuyến mãi</td>
                        <td>Thành tiền</td>
                        <td>
                            <button class="btn btn-success" name="productId"
                                    data-ProductId="@item.Products.Id" id="btnUpdate">
                                Cập nhật
                            </button>
                            <a href="@Url.Action("RemoveCart","Cart",new { productId = item.Products.Id })"
                               class="btn btn-danger" id="btnXoa">Xóa</a>
                        </td>
                    </tr>
                }
                <tr>
                    <td colspan="6" class="text-right">Tổng tiền</td>
                    <td>@String.Format("{0:C}", total)</td>
                    <td></td>
                </tr>
            </tbody>
        </table>
        <a id="btnDathang" class="btn btn-primary" href="@Url.Action("PT_PayMent","Cart")">Đặt hàng</a>
    }
    else
    {
        <div class="alert alert-danger" role="alert">Giỏ hàng trống </div>
    }
</div>
