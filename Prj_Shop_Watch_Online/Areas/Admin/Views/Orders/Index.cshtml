@model IEnumerable<Prj_Shop_Watch_Online.Models.Orders>

@{
    ViewBag.Title = "Đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    int stt = 1;
}

<h2>Đơn hàng</h2>

<div class="text-right">
    <a href="@Url.Action("Create","Orders")">Tạo mới</a>
</div>
<div class="row">
    <input id="keyword" name="keyword" placeholder="Tìm theo tên" />
    <button type="submit">tìm</button>
</div>
<table class="table">
    <tr>
        <th>
            STT
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Users.Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShipName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShipAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShipEmail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShipPhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Payment.PayName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        
        <tr>
            <td>
                @(stt++)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Users.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShipName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShipAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShipEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShipPhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Payment.PayName)
            </td>
            @if(item.Status == true)
            {
                <td>
                    đã xác nhận
                </td>
            }
            else
            {
                <td>
                    chưa xác nhận
                </td>
            }

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
